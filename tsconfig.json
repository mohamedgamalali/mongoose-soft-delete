{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "strictPropertyInitialization": false,
    "baseUrl": ".", // Sets the base directory for relative paths in this tsconfig
    "paths": {
      "@db/mongoose-customs": ["./mongoose-customs"] // Alias for your mongoose-customs.ts
    }
  },
  "include": ["/**/*"],
  "exclude": ["**/*.test.+(ts|js)", "**/*.spec.ts", "mocks/*", "local/*", "./dist/*", "scripts/*"]
}
